<h1>Active Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Path</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Bug.all.each do |bug| %>
      <% if bug.status == false %>
        <tr>
          <td><%= bug.path %></td>
          <td><%= bug.description %></td>
          <td><%= bug.status %></td>
          <td><%= link_to 'Show', bug %></td>
          <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
          <td><%= button_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', bugs_path %>